# Production Environment Configuration Template
# Copy this to .env and update with your production values

# Security Configuration
SECRET_KEY=your_production_secret_key_here
JWT_SECRET_KEY=your_production_jwt_secret_here
ENVIRONMENT=production

# Database Configuration (with SSL)
DATABASE_URL=postgresql://gcpanel_user:secure_password@your-db-host:5432/gcpanel_prod?sslmode=require

# IP Whitelisting (Optional - comma-separated list)
# ALLOWED_IPS=192.168.1.0/24,10.0.0.100,203.0.113.0/24

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_SESSIONS=3

# HTTPS Configuration (handled by Replit)
FORCE_HTTPS=true
SECURE_COOKIES=true

# Monitoring & Logging
LOG_LEVEL=INFO
SECURITY_AUDIT_ENABLED=true
FAILED_LOGIN_THRESHOLD=5

# External Services (if needed)
# SMTP_SERVER=smtp.your-domain.com
# SMTP_PORT=587
# SMTP_USERNAME=notifications@your-domain.com
# SMTP_PASSWORD=your_smtp_password

# Backup Configuration
# BACKUP_SCHEDULE=daily
# BACKUP_RETENTION_DAYS=30