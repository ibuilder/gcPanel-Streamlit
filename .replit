modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "freetype", "glibcLocales", "libiconv", "rustc"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "gcPanel Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "gcPanel Sidebar"

[[workflows.workflow]]
name = "gcPanel Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "gcPanel Sidebar"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app_simple.py --server.port 5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
